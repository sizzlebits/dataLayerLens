{
  "name": "datalayerlens",
  "version": "1.0.0",
  "description": "Development tool for monitoring GTM dataLayer events - inject into your app during development",
  "author": "Simon Seddon",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./inject": {
      "import": "./dist/inject.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts src/inject.ts --format esm --dts --clean",
    "dev": "tsup src/index.ts src/inject.ts --format esm --dts --watch",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/sizzlebits/dataLayerLens.git",
    "directory": "packages/datalayer-monitor-dev"
  },
  "homepage": "https://github.com/sizzlebits/dataLayerLens",
  "bugs": {
    "url": "https://github.com/sizzlebits/dataLayerLens/issues"
  },
  "keywords": [
    "gtm",
    "google-tag-manager",
    "datalayer",
    "analytics",
    "debugging",
    "development",
    "devtools",
    "react",
    "vue",
    "next",
    "nuxt",
    "dataLayer",
    "tag-manager"
  ],
  "devDependencies": {
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  }
}
