{
  "name": "datalayerlens",
  "version": "3.0.0",
  "description": "A powerful, beautiful browser extension for monitoring GTM dataLayer events in real-time",
  "type": "module",
  "author": "Simon Seddon",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/sizzlebits/dataLayerLens.git"
  },
  "homepage": "https://github.com/sizzlebits/dataLayerLens",
  "bugs": {
    "url": "https://github.com/sizzlebits/dataLayerLens/issues"
  },
  "keywords": [
    "gtm",
    "google-tag-manager",
    "datalayer",
    "analytics",
    "debugging",
    "browser-extension",
    "chrome-extension",
    "firefox-addon",
    "devtools"
  ],
  "scripts": {
    "dev": "vite build --watch --mode development",
    "build": "vite build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "build:firefox": "cross-env BROWSER=firefox vite build",
    "build:chrome": "cross-env BROWSER=chrome vite build",
    "build:all": "npm run build:chrome && npm run build:firefox",
    "package": "npm run build:all && npm run package:chrome && npm run package:firefox",
    "package:chrome": "cd dist/chrome && zip -r dataLayerLens.zip . -x '*.zip'",
    "package:firefox": "cd dist/firefox && zip -r dataLayerLens.zip . -x '*.zip'",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "serve:test": "npx serve . -p 3000",
    "prepare": "husky",
    "version": "node scripts/sync-version.js && git add public/manifest.chrome.json public/manifest.firefox.json",
    "postversion": "npm run build:all && node scripts/package-release.js",
    "release": "npm run build:all && node scripts/package-release.js"
  },
  "dependencies": {
    "framer-motion": "^11.15.0",
    "lucide-react": "^0.468.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "storybook": "^10.2.0",
    "zustand": "^5.0.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@storybook/addon-a11y": "^10.2.0",
    "@storybook/addon-docs": "^10.2.0",
    "@storybook/react-vite": "^10.2.0",
    "@testing-library/dom": "^10.4.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/chrome": "^0.0.287",
    "@types/react": "^19.0.1",
    "@types/react-dom": "^19.0.1",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/coverage-v8": "^2.1.8",
    "autoprefixer": "^10.4.20",
    "cross-env": "^7.0.3",
    "eslint": "^9.17.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "husky": "^9.1.7",
    "jsdom": "^25.0.1",
    "lint-staged": "^16.2.7",
    "postcss": "^8.4.49",
    "sharp": "^0.34.5",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.53.0",
    "vite": "^6.0.5",
    "vitest": "^2.1.8"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
