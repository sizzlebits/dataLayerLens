{
  "manifest_version": 2,
  "name": "DataLayer Lens",
  "version": "2.0.0",
  "description": "A powerful, beautiful tool for monitoring GTM dataLayer events in real-time",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "browser_action": {
    "default_popup": "src/popup/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_title": "DataLayer Lens"
  },
  "sidebar_action": {
    "default_title": "DataLayer Lens",
    "default_panel": "src/sidepanel/index.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "permissions": [
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "devtools_page": "src/devtools/index.html",
  "web_accessible_resources": [
    "injected.js",
    "overlay.js"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "datalayer-lens@extension",
      "strict_min_version": "109.0"
    }
  }
}
